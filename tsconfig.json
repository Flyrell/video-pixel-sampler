{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "outDir": "dist",
    "target": "es2015",
    "sourceMap": true,
    "module": "commonjs",
    "declaration": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "paths": {
      "@app/*": ["src/*"]
    }
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}